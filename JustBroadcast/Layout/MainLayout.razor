@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using JustBroadcast.Services
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row">
                    <div class="top-row-right">
                        <div class="notification-icon">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge">3</span>
                        </div>
                        <AuthorizeView>
                            <Authorized Context="userContext">
                                <div class="user-dropdown" @onclick="ToggleUserMenu">
                                    <div class="user-avatar-small">
                                        @GetUserInitials()
                                    </div>
                                    <div class="user-details-small">
                                        <div class="user-name-small">@GetUserName()</div>
                                        <div class="user-email-small">@GetUserRole()</div>
                                    </div>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                @if (showUserMenu)
                                {
                                    <div class="user-menu-dropdown">
                                        <div class="user-menu-item" @onclick="HandleLogout">
                                            <i class="fas fa-sign-out-alt"></i>
                                            <span>Logout</span>
                                        </div>
                                    </div>
                                }
                            </Authorized>
                        </AuthorizeView>
                    </div>
                </div>

                <article class="content">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        @Body
    </NotAuthorized>
</AuthorizeView>
