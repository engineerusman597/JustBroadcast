@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using JustBroadcast.Services
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row">
                    <div class="top-row-right">
                        <div class="notification-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-bell size-5" aria-hidden="true"><path d="M10.268 21a2 2 0 0 0 3.464 0"></path><path d="M3.262 15.326A1 1 0 0 0 4 17h16a1 1 0 0 0 .74-1.673C19.41 13.956 18 12.499 18 8A6 6 0 0 0 6 8c0 4.499-1.411 5.956-2.738 7.326"></path></svg>
                            <span class="notification-badge">3</span>
                        </div>
                        <AuthorizeView>
                            <Authorized Context="userContext">
                                <div class="user-dropdown" @onclick="ToggleUserMenu">
                                    <div class="user-avatar-small">
                                        @GetUserInitials()
                                    </div>
                                    <div class="user-details-small">
                                        <div class="user-name-small">@GetUserName()</div>
                                        <div class="user-email-small">@GetUserRole()</div>
                                    </div>
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                                @if (showUserMenu)
                                {
                                    <div class="user-menu-dropdown">
                                        <div class="user-menu-item" @onclick="HandleLogout">
                                            <i class="fas fa-sign-out-alt"></i>
                                            <span>Logout</span>
                                        </div>
                                    </div>
                                }
                            </Authorized>
                        </AuthorizeView>
                    </div>
                </div>

                <article class="content">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        @Body
    </NotAuthorized>
</AuthorizeView>
