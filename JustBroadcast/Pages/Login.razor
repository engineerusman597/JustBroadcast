@page "/login"
@using DevExpress.Blazor
@using JustBroadcast.Models
@using JustBroadcast.Services
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="logo">
                <img src="images/logo.png" alt="Logo" class="company-logo" />
                <div class="logo-text">
                    <h1>Just Broadcast</h1>
                    <p class="subtitle">Control Center</p>
                </div>
            </div>
        </div>

        <div class="login-form">
            <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                <DataAnnotationsValidator />

                <div class="form-group">
                    <label>Username</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <DxTextBox @bind-Text="@loginModel.Username"
                                   CssClass="login-input"
                                   NullText="Enter your username"
                                   ShowValidationIcon="false" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Username)" />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <DxTextBox @bind-Text="@loginModel.Password"
                                   Password="true"
                                   CssClass="login-input"
                                   NullText="Enter your password"
                                   ShowValidationIcon="false" />
                    </div>
                    <ValidationMessage For="@(() => loginModel.Password)" />
                </div>

                <div class="form-group remember-me-group">
                    <DxCheckBox @bind-Checked="@rememberMe"
                                CssClass="remember-me-checkbox">
                        <label class="remember-me-label">Remember me</label>
                    </DxCheckBox>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="error-message">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>@errorMessage</span>
                    </div>
                }

                <DxButton Text="@(isLoading ? "Logging in..." : "Login")"
                          RenderStyle="ButtonRenderStyle.Primary"
                          CssClass="login-button"
                          SubmitFormOnClick="true"
                          Enabled="@(!isLoading)" />
            </EditForm>
        </div>

        <div class="login-footer">
            <p>Please contact your administrator for access</p>
        </div>
    </div>
</div>


